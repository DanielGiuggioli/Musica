@page
@model Musica.EditModel
@{
    ViewData["Title"] = "Edit";
}
@if (Model.GetUser() == null || !Model.GetUser().IsVerified)
{
    <div class="text-center mt-5">
        <p>You are not logged in! <a asp-page="/Users/Register" class="text-black-50">Register</a> or <a asp-page="/Users/Login" class="text-black-50">Log in</a></p>
    </div>
}
else
{
    <form method="post">
        <div class="text-center">
            <b style="color:#ffffff;font-size:2.5em;">@ViewData["Title"]</b>
        </div>
        <div class="container mt-5 text-center">
            <div class="row mt-2">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <p>Username</p>
                    <input type="text" class="form-control" asp-for="Username" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <p>Email</p>
                    <input type="email" class="form-control" asp-for="Email" disabled />
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <input type="submit" class="btn btn-block btn-dark" value="Confirm" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6 text-left text-black-50">
                    <a asp-page="/users/Index">&lt; Back</a>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.ErrorText))
            {
                <div class="alert alert-danger text-center">
                    <p>@Model.ErrorText</p>
                </div>
            }
        </div>

    </form>
}
}