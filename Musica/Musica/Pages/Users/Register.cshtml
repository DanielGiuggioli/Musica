@page
@model Musica.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<form method="post">
    <div class="text-center">
        <b style="color:#ffffff;font-size:2.5em;">@ViewData["Title"]</b>
    </div>
    <div class="text-sm-center mt-5">
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <p>E-mail</p>
                <input type="email" class="form-control" asp-for="email" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <p>Username</p>
                <input type="text" class="form-control" asp-for="username" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <p>Password</p>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <p>Confirm password</p>
                <input type="password" class="form-control" asp-for="ConfirmedPassword" />
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <input type="submit" class="btn btn-block btn-dark" value="Register" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <label>Do you already have an account? <a asp-page="/users/login">Log in</a></label>
            </div>
        </div>

        @if (Model.IsSended)
        {
            <div class="alert alert-success" role="alert">
                Email sended successfully. View at your email address to complete the registration
            </div>
        }

        else if (!Model.IsFirstOpen)
        {
            <div class="alert alert-danger" role="alert">
                Something has gone wrong sending the email. Unable to complete the registration
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorText))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorText
            </div>
        }
    </div>
</form>