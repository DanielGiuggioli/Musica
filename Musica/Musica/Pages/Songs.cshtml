@page
@model Musica.SongsModel
@{
    ViewData["Title"] = "Search song";
}
<form method="post">
    <div class="row">
        <div class="col-7">
            <input type="search" class="form-control" placeholder="Search a song" asp-for="SearchedSong">
        </div>
        <div class="col">
            <input type="submit" class="btn btn-primary mb-3" value="Search">
        </div>
    </div>
    @if (Model.Songs != null)
    {
        @foreach (var s in Model.Songs)
        {
            <div class="container border rounded shadow m-2">
                <div class="row">
                    <div class="col-4 mt-2 mb-2">
                        <img src="@s.header_image_url" class="rounded float-left" alt="@s.full_title img" style="max-height:100px;max-width:100px">
                    </div>
                    <div class="col mt-2">
                        <b><i>@s.title</i></b>
                        <br />
                        <i>@s.artist_names</i>
                    </div>
                </div>
            </div>
        }
    }
</form>