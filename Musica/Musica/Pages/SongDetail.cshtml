@page
@model Musica.Pages.SongDetailModel
@{
    ViewData["Title"] = "Song detail";
}
<div class="text-center">
    <b style="color:#ffffff;font-size:2.5em;">@ViewData["Title"]</b>
</div>
<div class="container m-3">
    <div class="row">
        <div class="col text-center">
            <b style="color:#ffffff;font-size:2.2em;">@Model.Song.full_title</b>
        </div>
    </div>
    <div class="row">
        @if (Model.Song.recording_location != null)
        {
            <div class="col text-center">
                <p>Recording location: @Model.Song.recording_location</p>
            </div>
        }
        @if (Model.Song.release_date_for_display != null)
        {
            <div class="col text-center">
                <p>Release date: @Model.Song.release_date_for_display</p>
            </div>
        }

    </div>
    @if (Model.Song.Lyrics == null)
    {
        <div class="row">
            <div class="col text-center">
                <p>Lyrics unavailable by Api, you can see <a href="@Model.Song.url" target="_blank">@Model.Song.title on Genius</a></p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col text-center">
                @Html.Raw(Model.Song.Lyrics)
            </div>
        </div>
    }

</div>