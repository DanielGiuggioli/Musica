@page
@model Musica.ArtistsModel
@{
    ViewData["Title"] = "Search artist";
}

<div style="padding-bottom: 15px;">
    <form method="post">
        <div class="container mt-3">
            <div class="row">
                <div class="col-7">
                    <input type="search" class="form-control" placeholder="Search an artist" asp-for="SearchedArtist">
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-dark mb-3" value="Search">
                </div>
            </div>
        </div>

        @if (Model.Artist != null)
        {
            <div class="row m-2">
                <div class="col-md rounded border shadow bg5 mt-sm-3 mr-2">
                    <div class="row">
                        <div class="col pl-3">
                            <b style="color:#000000;font-size:2.4em;">@Model.Artist.Artist.name</b>
                        </div>
                        <div class="col">
                            <span class="float-right">
                                <a class="text-dark" href="javascript: setFavourite()">
                                    <i class="bi bi-star" style="font-size: 2.3em;"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center mt-3">
                            <img src="@Model.Artist.Artist.image_url" class="img-fluid float-start" alt="@Model.Artist.Artist.name img" style="max-height:350px;max-width:350px">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <p>@Model.Artist.Artist.GetDescription()</p>
                            <div class="justify-content-end">
                                <a href="@Model.Artist.Artist.url" target="_blank">@Model.Artist.Artist.name on  genius</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md rounded border shadow bg5 ml-2 mt-sm-3">
                    <div class="text-center p-1">
                        <b style="color:#000000;font-size:2.1em;">Famous tracks</b>
                    </div>
                    <hr />
                    @foreach (var song in Model.Artist.Songs)
                    {

                        <div class="row">
                            <div class="col-3 mb-1">
                                <img src="@song.header_image_url" class="rounded img-fluid" alt="@song.title img" style="max-height:70px;max-width:70px">
                            </div>
                            <div class="col">
                                <b><i>@song.title</i></b>
                                <br />
                                <i>@song.artist_names</i>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
            </div>

        }
    </form>
</div>